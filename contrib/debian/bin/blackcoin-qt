#!/bin/sh

set -e

umask 077

basedir=~/.folgorycoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/folgorycoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# FolgoryCoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/folgorycoin/folgorycoin-qt "$@"
